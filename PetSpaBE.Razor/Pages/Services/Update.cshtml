@page "{id}"
@model PetSpaBE.Razor.Pages.Services.UpdateModel
@{
    ViewData["Title"] = "Update Service";
};
<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group">
        <label for="Name">Service Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Service.Name" required />
    </div>
    
    <div class="form-group">
        <label for="Description">Description</label>
        <textarea class="form-control" id="Description" name="Description">@Model.Service.Description</textarea>
    </div>
    
    <!-- Add any other fields you need for updating the service -->
    
    <button type="submit" class="btn btn-primary">Update</button>
</form>
