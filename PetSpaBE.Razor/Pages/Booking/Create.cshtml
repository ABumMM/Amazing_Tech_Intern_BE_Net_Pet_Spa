@page
@model PetSpaBE.Razor.Pages.Booking.CreateModel

@{
    ViewData["Title"] = "Tạo Booking Mới";
    <h2>Tạo Booking Mới</h2>
    <form method="post">

        <div class="form-group">
            <label for="Description">Mô tả</label>
            <input type="text" class="form-control" id="Description" name="Description" required />
        </div>
        <div class="form-group">
            <label for="Status">Trạng thái</label>
            <input type="text" class="form-control" id="Status" name="Status" required />
        </div>

        <!-- Ngày đặt -->
        <div class="form-group">
            <label for="Date">Ngày đặt</label>
            <input type="date" class="form-control" id="Date" name="Date" required />
        </div>

        <!-- Nhân viên -->
        <div class="form-group">
            <label for="ApplicationUserId">Nhân viên</label>
            <select class="form-control" id="ApplicationUserId" name="ApplicationUserId" required>
                <option value="Pending">Nhân viên 01</option>
                <option value="Confirmed">Nhân viên 02</option>
                <option value="Cancelled">Nhân viên 03</option>
            </select>
        </div>

        <!-- Nút submit -->
        <button type="submit" class="btn btn-primary">Tạo Booking</button>
    </form>
}
 